{
	"name": "generic_pipeline",
	"properties": {
		"activities": [
			{
				"name": "ForEach1",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Lookup1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Lookup1').output.value",
						"type": "Expression"
					},
					"isSequential": false,
					"activities": [
						{
							"name": "Execute Drift Schema Pipeline",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pipeline2",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"primarykey": {
										"value": "@item().primarykey",
										"type": "Expression"
									},
									"columnnames": {
										"value": "@item().columnnames",
										"type": "Expression"
									},
									"sourcetablename": {
										"value": "@item().sourcetablename",
										"type": "Expression"
									},
									"targettablename": {
										"value": "@item().targettablename",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "Send Notification",
							"type": "ExecutePipeline",
							"dependsOn": [
								{
									"activity": "Execute Drift Schema Pipeline",
									"dependencyConditions": [
										"Completed"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pipeline4",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"Subject": "Drift Template Notification",
									"DataFactoryName": {
										"value": "@{pipeline().DataFactory}",
										"type": "Expression"
									},
									"PipelineName": {
										"value": "@{pipeline().Pipeline}",
										"type": "Expression"
									},
									"ErrorMessage": "Check Logs",
									"ParameterSet": {
										"value": "@item().sourcetablename",
										"type": "Expression"
									},
									"EmailTo": "shiv.mohan@centricconsulting.com"
								}
							}
						}
					]
				}
			},
			{
				"name": "Lookup1",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "Select  top 1 primarykey,columnnames,sourcetablename,targettablename from vw_sysmetadata",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "AzureSqlTableMetadata",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			}
		],
		"annotations": []
	}
}